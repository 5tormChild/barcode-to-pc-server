{
  "name": "barcode-to-pc-server",
  "description": "Barcode to PC server app",
  "keywords": [
    "barcode",
    "app",
    "remote"
  ],
  "version": "2.0.0",
  "license": "MIT",
  "author": {
    "name": "Filippo Tortomasi",
    "email": "filippo.tortomasi@gmail.com.com",
    "url": "https://github.com/fttx"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fttx/barcode-to-pc-server.git"
  },
  "main": "main.js",
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "tsc": "tsc",
    "lint": "ng lint",
    "test": "ng test",
    "e2e": "ng e2e",
    "browser": "ng serve",
    "browser:keep-dist": "ng serve --delete-output-path=false",
    "electron": "electron ./dist",
    "electron-dev": "electron ./dist/main.js --dev",
    "build:main": "tsc --project tsconfig.electron.json",
    "build:main:watch": "tsc -w --project tsconfig.electron.json",
    "build": "ng build --prod --output-path=dist && npm run build:main && copyfiles package.json dist && copyfiles node_modules dist",
    "start": " build:main && npm-run-all --parallel browser electron-dev",
    "watch": "npm-run-all --parallel build:main:watch browser:keep-dist",
    "prepare:dist": "electron-builder install-app-deps && ng build --prod --output-path=dist && tsc --project tsconfig.electron.json && copyfiles package.json dist && cd dist && npm install --prod && cd .. && copyfiles -f electron-resources/* dist/build/",
    "dist": "npm run prepare:dist && build",
    "fix-sass": "npm rebuild node-sass",
    "publish": "npm run prepare:dist && build --win --ia32 --x64 --project dist -p always",
    "postinstall": ""
  },
  "private": true,
  "build": {
    "compression": "maximum",
    "appId": "com.barcodetopc.server",
    "productName": "Barcode to PC server",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis-web",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "installerSidebar": "build/MUI_WELCOMEFINISHPAGE_BITMAP.bmp",
      "shortcutName": "Barcode to PC server",
      "artifactName": "${name}.v${version}.${os}.setup.${ext}"
    }
  },
  "dependencies": {
    "@angular/animations": "^4.4.3",
    "@angular/common": "^4.2.4",
    "@angular/compiler": "^4.2.4",
    "@angular/core": "^4.2.4",
    "@angular/forms": "^4.2.4",
    "@angular/http": "^4.2.4",
    "@angular/platform-browser": "^4.2.4",
    "@angular/platform-browser-dynamic": "^4.2.4",
    "@angular/router": "^4.2.4",
    "angular2-qrcode": "^2.0.1",
    "bonjour": "^3.5.0",
    "bootstrap-sass": "^3.3.7",
    "core-js": "^2.4.1",
    "electron-updater": "^2.16.1",
    "file-saver": "^1.3.3",
    "mdns": "^2.3.3",
    "network": "^0.3.2",
    "ng2-dragula": "^1.5.0",
    "ngx-bootstrap": "^1.9.3",
    "ngx-clipboard": "^3.0.7",
    "papaparse": "^4.1.2",
    "robotjs": "^0.4.7",
    "rxjs": "^5.4.2",
    "ws": "^3.2.0",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.3.2",
    "@angular/compiler-cli": "^4.2.4",
    "@angular/language-service": "^4.2.4",
    "@types/bonjour": "^3.5.5",
    "@types/express": "^4.0.37",
    "@types/file-saver": "0.0.0",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^8.0.51",
    "@types/papaparse": "^4.1.28",
    "@types/ws": "^3.2.0",
    "codelyzer": "~2.0.0",
    "copyfiles": "1.2.0",
    "electron": "^1.7.6",
    "electron-builder": "^19.45.4",
    "electron-log": "^2.2.11",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "^4.1.1",
    "protractor": "~5.1.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.3.2",
    "typescript": "^2.5.3"
  }
}