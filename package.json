{
  "name": "barcode-to-pc-server",
  "description": "Barcode to PC server",
  "keywords": [
    "barcode",
    "app",
    "remote"
  ],
  "version": "2.0.0",
  "license": "MIT",
  "author": {
    "name": "Filippo Tortomasi",
    "email": "filippo.tortomasi@gmail.com.com",
    "url": "https://github.com/fttx"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fttx/barcode-to-pc-server.git"
  },
  "main": "electron/src/main.js",
  "scripts": {
    "postinstall": "npx electron-builder install-app-deps && cd ionic && npm i",
    "start": "npx gulp --cwd ./ionic/ serve",
    "dist": "npx gulp --cwd ./ionic/ dist",
    "electron:dist": "tsc -p electron/tsconfig.json && npx copyfiles package.json dist && npx copyfiles -f ./electron/electron-resources/* ./dist/build/ && cd dist && npm install --prod && npx electron-builder"
  },
  "private": true,
  "build": {
    "compression": "maximum",
    "appId": "com.barcodetopc.server",
    "productName": "Barcode to PC server",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis-web",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "installerSidebar": "build/MUI_WELCOMEFINISHPAGE_BITMAP.bmp",
      "shortcutName": "Barcode to PC server",
      "artifactName": "${name}.v${version}.${os}.setup.${ext}"
    }
  },
  "dependencies": {
    "bonjour": "^3.5.0",
    "electron-updater": "^2.20.1",
    "mdns": "^2.3.4",
    "network": "^0.4.1",
    "requirejs": "^2.3.5",
    "robotjs": "^0.4.7",
    "rxjs": "^5.5.6",
    "systemjs": "^0.21.0",
    "ws": "^4.1.0"
  },
  "devDependencies": {
    "@types/bonjour": "^3.5.5",
    "@types/electron": "^1.6.10",
    "@types/mdns": "0.0.32",
    "copyfiles": "^1.2.0",
    "electron": "^1.8.2",
    "electron-builder": "^20.2.0",
    "electron-log": "^2.2.14",
    "gulp": "^3.9.1",
    "npx": "^9.7.1",
    "typescript": "^2.7.2"
  }
}
