{
  "name": "barcode-to-pc-server",
  "description": "Barcode to PC server app",
  "keywords": [
    "barcode",
    "app",
    "remote"
  ],
  "version": "1.1.0",
  "license": "MIT",
  "author": {
    "name": "Filippo Tortomasi",
    "email": "filippo.tortomasi@gmail.com.com",
    "url": "https://github.com/fttx"
  },
  "main": "main.js",
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "lint": "ng lint",
    "test": "ng test",
    "e2e": "ng e2e",
    "browser": "ng serve",
    "electron:run": "electron ./dist",
    "electron:dev": "electron ./dist --dev",
    "build:main": "tsc main.ts --outDir dist && copyfiles package.json dist && copyfiles node_modules dist",
    "build": "ng build --prod --output-path=dist && npm run build:main",
    "start": "electron ./dist",
    "dev": "npm run build:main && npm-run-all --parallel browser electron:dev",
    "dist": "cross-env NODE_ENV=production ng build --prod --output-path=dist && tsc main.ts --outDir dist && copyfiles package.json dist && cd dist && npm install --prod && cd .. && copyfiles -f electron-resources/* dist/build/ && build --project dist",
    "fix-sass": "npm rebuild node-sass"
  },
  "private": true,
  "build": {
    "compression": "maximum",
    "appId": "com.barcodetopc.server",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerSidebar": "build/MUI_WELCOMEFINISHPAGE_BITMAP.bmp"
    }
  },
  "dependencies": {
    "@angular/common": "^4.2.4",
    "@angular/compiler": "^4.2.4",
    "@angular/core": "^4.2.4",
    "@angular/forms": "^4.2.4",
    "@angular/http": "^4.2.4",
    "@angular/platform-browser": "^4.2.4",
    "@angular/platform-browser-dynamic": "^4.2.4",
    "@angular/router": "^4.2.4",
    "angular2-qrcode": "^2.0.1",
    "bootstrap-sass": "^3.3.7",
    "core-js": "^2.4.1",
    "rxjs": "^5.4.2",
    "zone.js": "^0.8.14",
    "file-saver": "^1.3.3",
    "ng2-bootstrap": "^1.1.16-11",
    "ng2-dragula": "^1.5.0",
    "ngx-clipboard": "^3.0.7",
    "papaparse": "^4.1.2",
    "bonjour": "^3.5.0",
    "express": "^4.15.2",
    "express-ws": "^3.0.0",
    "mdns": "^2.3.3",
    "network": "^0.3.2",
    "robotjs": "^0.4.7"
  },
  "devDependencies": {
    "@angular/cli": "1.3.2",
    "@angular/compiler-cli": "^4.2.4",
    "@types/file-saver": "0.0.0",
    "@angular/language-service": "^4.2.4",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "@types/papaparse": "^4.1.28",
    "codelyzer": "~2.0.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3",
    "electron": "^1.6.7",
    "electron-builder": "^19.27.3",
    "electron-reload": "1.2.1",
    "copyfiles": "1.2.0",
    "cross-env": "5.0.5",
    "npm-run-all": "^4.1.1"
  }
}
